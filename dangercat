#!/bin/bash


_get_repolink () {
    local regex
    regex='(https?)://github.com/.+/.+'
    if [[ $DANGER_REPO == "dangercat" ]]
    then
        echo "aHR0cHM6Ly9naXRodWIuY29tL3dhcnVzZXJib3Qvd2FydXNlcmJvdA=" | base64 -d
    elif [[ $WAR_REPO == "DANGERCAT" ]]
    then
        echo "aHR0cHM6Ly9naXRodWIuY29tL1dhcnVzZXJib3Qvd2FydXNlcmJvdC9hcmNoaXZlL21hc3Rlci56aXA=" | base64 -d
    elif [[ $DANGER_REPO =~ $regex ]]
    then
        if [[ $DANGER_REPO_BRANCH ]]
        then
            echo "${DANGER_REPO}/archive/${DANGER_REPO_BRANCH}.zip"
        else
            echo "${DANGER_REPO}/archive/master.zip"
        fi
    else
        echo "aHR0cHM6Ly9naXRodWIuY29tL1dhcnVzZXJib3Qvd2FydXNlcmJvdC9hcmNoaXZlL21hc3Rlci56aXA=" | base64 -d
    fi
}


_set_bot () {
    local zippath
    zippath="mafiabot.zip"
    echo "  Downloading source code ..."
    wget -q $(_get_repolink) -O "$zippath"
    echo "  Unpacking Data ..."
    MAFIAPATH=$(zipinfo -1 "$zippath" | grep -v "/.");
    unzip -qq "$zippath"
    echo "Done"
    echo "  Cleaning ..."
    rm -rf "$zippath"
    sleep 5
    cd $MAFIAPATH
    echo "    Starting WarBot    "
    echo "
     
                dangercat                 
    "
    
    python3 ./setup/updater.py ./requirements.txt requirements.txt
    python3 -m userbot
}

_set_bot
